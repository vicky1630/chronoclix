<%- include ('../partials/nav.ejs') %>
<h1>Edit Series</h1>
<form action="/series/<%=series._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%=series.name%>" />
      </div>
      <div class="form-group">
        <label for="creator">Creator</label>
        <input type="text" id="creator" name="creator" value="<%=series.creator%>" />
      </div>
      <div class="form-group">
        <label for="description">Series Description</label>
        <input type="text" id="description" name="description" value="<%=series.description%>"/>
      </div>
      <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" id="genre" name="genre" value="<%=series.genre%>"/>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>